<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.FavoriteFragment"
    android:layout_marginBottom="@android:dimen/app_icon_size">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favoriteWokrsRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/noRegist"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:padding="20dp"
        android:visibility= "gone"
        android:layout_marginEnd="10dp">

        <Button
            android:id="@+id/butInLoginNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_profile_nav_vig"
            android:text="@null"
            />

        <TextView
            android:id="@+id/inLoginNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regis_nav_favorite"
            android:gravity="center"
            android:textSize="24sp" />
    </LinearLayout>
</FrameLayout>