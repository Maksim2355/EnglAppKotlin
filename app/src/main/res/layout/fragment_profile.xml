<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_marginBottom="20dp"
    tools:context=".profile.ProfileFragment">


    <EditText
        android:id="@+id/loginIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittextstyle"
        android:ems="12"
        android:hint="@string/loginPlease"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:padding="13dp"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <EditText
        android:id="@+id/passwordIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edittextstyle"
        android:ems="12"
        android:textSize="20sp"
        android:hint="@string/passwordPlease"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:padding="13dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/loginIn"
        app:layout_constraintStart_toStartOf="@+id/loginIn"
        app:layout_constraintTop_toBottomOf="@+id/loginIn" />

    <Button
        android:id="@+id/loginBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:ems="12"
        android:textColor="#FFFF"
        android:background="#2196f3"
        android:text="@string/loginIn"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordIn"
        app:layout_constraintStart_toStartOf="@+id/passwordIn"
        app:layout_constraintTop_toBottomOf="@+id/passwordIn" />

    <Button
        android:id="@+id/regBut"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:text="@string/registration"
        android:textSize="16sp"
        android:textColor="#FFFF"
        android:background="#2196f3"
        app:layout_constraintEnd_toEndOf="@+id/loginBut"
        app:layout_constraintStart_toStartOf="@+id/loginBut"
        app:layout_constraintTop_toBottomOf="@+id/loginBut" />

</androidx.constraintlayout.widget.ConstraintLayout>
